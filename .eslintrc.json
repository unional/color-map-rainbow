{
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": "plugin:harmony/latest",
  "overrides": [
    {
      "extends": "plugin:harmony/ts-recommended-type-check",
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "parserOptions": {
        "project": "tsconfig.json"
      }
    }
  ],
  "root": true
}
